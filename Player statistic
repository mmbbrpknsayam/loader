unviewLabel.TextColor3 = Color3.fromRGB(0, 0, 0)

local currentHealthConnection
local currentCharConnection
local selectedPlayer = nil
local originalSubject = camera.CameraSubject

local function updatePlayerInfo(plr)
	displayNameLabel.Text = "Display Name: " .. plr.DisplayName
	usernameLabel.Text = "Username: " .. plr.Name
	thumbnail.Image = ""

	-- Clear previous connections
	if currentHealthConnection then
		currentHealthConnection:Disconnect()
		currentHealthConnection = nil
	end
	if currentCharConnection then
		currentCharConnection:Disconnect()
		currentCharConnection = nil
	end

	local function updateHealth()
		if plr.Character and plr.Character:FindFirstChild("Humanoid") then
			healthLabel.Text = "Health: " .. math.floor(plr.Character.Humanoid.Health)
		else
			healthLabel.Text = "Health: N/A"
		end
	end

	updateHealth()

	-- Listen for new character
	currentCharConnection = plr.CharacterAdded:Connect(function(char)
		char:WaitForChild("Humanoid")
		updateHealth()
		if currentHealthConnection then
			currentHealthConnection:Disconnect()
		end
		currentHealthConnection = char:WaitForChild("Humanoid").HealthChanged:Connect(updateHealth)
	end)

	-- Listen for health changes now if character already exists
	if plr.Character and plr.Character:FindFirstChild("Humanoid") then
		currentHealthConnection = plr.Character.Humanoid.HealthChanged:Connect(updateHealth)
	end
end

-- Populate player list with buttons
for _, plr in ipairs(Players:GetPlayers()) do
	local button = Instance.new("TextButton", playerListFrame)
	button.Size = UDim2.new(1, -8, 0, 30)
	button.Text = plr.DisplayName
	button.BackgroundColor3 = Color3.fromRGB(160, 160, 160)
	button.TextScaled = true
	button.Font = Enum.Font.SourceSans
	button.TextColor3 = Color3.fromRGB(20, 20, 20)

	-- Click event for selecting player
	button.MouseButton1Click:Connect(function()
		updatePlayerInfo(plr)
	end)
end

-- Update for new players joining
Players.PlayerAdded:Connect(function(plr)
	local button = Instance.new("TextButton", playerListFrame)
	button.Size = UDim2.new(1, -8, 0, 30)
	button.Text = plr.DisplayName
	button.BackgroundColor3 = Color3.fromRGB(160, 160, 160)
	button.TextScaled = true
	button.Font = Enum.Font.SourceSans
	button.TextColor3 = Color3.fromRGB(20, 20, 20)

	-- Click event for selecting player
	button.MouseButton1Click:Connect(function()
		updatePlayerInfo(plr)
	end)
end)

viewLabel.MouseButton1Click:Connect(function()
	if selectedPlayer and selectedPlayer.Character and selectedPlayer.Character:FindFirstChild("Humanoid") then
		originalSubject = camera.CameraSubject
		camera.CameraSubject = selectedPlayer.Character.Humanoid
	end
end)

unviewLabel.MouseButton1Click:Connect(function()
	if player.Character and player.Character:FindFirstChild("Humanoid") then
		camera.CameraSubject = player.Character.Humanoid
	end
end)
